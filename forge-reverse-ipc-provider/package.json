{
	"name": "forge-reverse-ipc-provider",
	"version": "1.0.0",
	"description": "",
	"keywords": [],
	"author": "",
	"type": "module",
	"types": "dist/esm/index.d.ts",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.js",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.cjs"
		}
	},
	"bin": {
		"forge-1193": "dist/esm/index.js"
	},
	"devDependencies": {
		"@types/node": "^18.15.7",
		"eip-1193": "^0.2.4",
		"tsup": "^6.7.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@achrinza/node-ipc": "^10.1.7",
		"ethers": "^6.0.8",
		"named-logs": "^0.2.2",
		"nanoid": "^4.0.1"
	},
	"scripts": {
		"build:esm": "tsup-node --entry src/index.ts --entry src/executor.ts --dts --out-dir dist/esm --format esm",
		"build:cjs": "tsup-node --entry src/index.ts --entry src/executor.ts --dts --out-dir dist/cjs --format cjs",
		"build": "pnpm run build:esm && pnpm run build:cjs"
	}
